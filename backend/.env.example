# Backend Python Environment Variables Example
# Copy this to .env file in the backend folder

# =============================================
# Database Configuration
# =============================================
# SQLite (default - for development)
DATABASE_URL=sqlite:///./jobalign.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost/jobalign_db

# =============================================
# API Keys & External Services
# =============================================
# Groq API (for AI interview questions)
GROQ_API_KEY=your_groq_api_key_here

# RapidAPI (for job listings)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_HOST=your_rapidapi_host_here

# =============================================
# OAuth Credentials
# =============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# LinkedIn OAuth
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# =============================================
# Payment & Subscription
# =============================================
# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# =============================================
# Security
# =============================================
# JWT Secret (change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_to_a_long_random_string

# JWT Expiration time in hours
JWT_EXPIRATION_HOURS=24

# =============================================
# URLs
# =============================================
# Backend URL (used in emails, etc.)
BACKEND_URL=http://localhost:8000

# Frontend URL (used for redirects and CORS)
FRONTEND_URL=http://localhost:5173

# =============================================
# Logging
# =============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================
# Environment Mode
# =============================================
# Environment: development, staging, production
ENVIRONMENT=development

# =============================================
# Adzuna API (alternative job source)
# =============================================
# ADZUNA_APP_ID=your_adzuna_app_id
# ADZUNA_APP_KEY=your_adzuna_app_key
